<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="style_rb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">1dp</item>

        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/white</item>

        <item name="android:drawablePadding">1dp</item>

        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/selector_rb_text</item>

    </style>

    <style name="style_btn_add">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">2</item>

        <item name="android:background">@drawable/bg_btn_add</item>
        <item name="android:gravity">center</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>

    </style>

</resources>
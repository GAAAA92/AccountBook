<resources>

    <style name="BottomTab_Text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#8a8a8a</item>
        <item name="tabSelectedTextColor">@color/light_blue_900</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <!--底部弹出条的样式（相当于背景）-->
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <!--状态栏颜色-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--导航条颜色-->
        <item name="android:navigationBarColor">@color/white</item>
    </style>
    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <!--背景，顶部两个圆角-->
        <item name="android:background">@drawable/shape_bg_bottomdialog</item>
    </style>
</resources>